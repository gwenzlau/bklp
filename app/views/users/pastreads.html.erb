<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<div class="col-md-8 col-md-offset-1" id="activity-feed">
					<% if @user.id == current_user.id %>
    				<label>Your Past Reads</label>
    				<% else %>
    				<label><%= @user.name %>'s Past Reads</label>
    				<% end %>
    				<div class="row" id="reads">
    					<% @past.each do |past| %>
    					<div class="col-md-2">
    						<%= link_to (image_tag ("http://images.amazon.com/images/P/#{past.isbn}.01.LZZZZZZ.jpg"), :title => "#{past.title}", data: { toggle: "tooltip"}), book_path(:id => past.olidb) %>
    					</div>
    					<% end %>
    				</div>
    			</div>
			</div>
		</div>
	</div>
</div>

<script>
	$('#reads img').tooltip({
		placement: 'bottom'
	});
</script>