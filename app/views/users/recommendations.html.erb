<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<div class="col-md-8 col-md-offset-1" id="activity-feed">
					<% if @user.id == current_user.id %>
    				<label>Your Recommended Reading List</label>
    				<% else %>
    				<label><%= @user.name %>'s Recommended Reading List</label>
    				<% end %>
    				<div class="row" id="reads">
    					<% @recommended_books.each do |recbook| %> 
							<div class="col-md-3">
								<% if Book.find_by_olidb(recbook.item_id).isbn.blank? %>

								<%= link_to (image_tag ("http://placehold.it/195x275"), :title => "#{Book.find_by_olidb(recbook.item_id).title}", data: { toggle: "tooltip"}), book_path(recbook.item_id) %>
								<% else %>
								<%= link_to (image_tag ("http://images.amazon.com/images/P/#{Book.find_by_olidb(recbook.item_id).isbn}.01.LZZZZZZ.jpg"), :title => "#{Book.find_by_olidb(recbook.item_id).title}", data: { toggle: "tooltip"}), book_path(recbook.item_id) %>
								<% end %>
							</div>
							<% end %>
    				</div>
    			</div>
			</div>
		</div>
	</div>
</div>

<script>
	$('#reads img').tooltip({
		placement: 'bottom'
	});
</script>