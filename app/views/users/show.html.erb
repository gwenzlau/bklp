<div class="bl-book-page">
	<div align="right">
		
		<% if @user.id == current_user.id %>
			<%# Do nothing since the current user is looking at his own profile %>
		<% else %>
			<% if current_user.following?(@user) %>
				<button><%= link_to "Unfollow", unfollow_user_path(@user) %></button>
			<% else %>
				<button><%= link_to "Follow", follow_user_path(@user) %></button>
			<% end %>
		<% end %>
	
 	</div>
 	<div id="avatar" align="center">
 		<% if @user.id == current_user.id %>
		<a href="<%= edit_user_registration_path %>"><%= image_tag @user.avatar.url, :class=>"img-circle" %></a>
		<% else %>
		<%= image_tag @user.avatar.url, :class=>"img-circle" %>
		<% end %>
 		<%#<%= image_tag avatar_big_url(@user), :class=>"img-circle"  %>
 		
	</div>
	<%# if current user and if not reading any books - Search form to add #%>
	<h2 align="center"><%= link_to @user.name, current_user %>  is currently reading: <%= @book.collect{ |f| link_to(f.title, book_path(:id => f.olidb))}.to_sentence.html_safe %>
	</h2> 
	<h3>Links:</h3>
	<strong><%= link_to "(Add a link)", new_link_path %></strong>
	
	  <% @link.each do |link| %>
		<li><%= link_to link.title, link.source  %>
			<% if @user.id == current_user.id %>
			| <%= link_to 'Show', link_path %>
				| <%= link_to 'Edit', edit_link_path %> |  
				 <%= link_to 'Delete', link, method: :delete, data: {confirm: 'Are you sure?'} %>
	  <% end %>
	  <% end %>
	  


	<h3>Past Reads:</h3>
		<ul>
  	<% @past.each do |past| %>
 			<li><%= link_to past.title, book_path(:id => past.olidb) %> by <%= past.author %></li>
  	<% end %>
	
	 <% @link.each do |link| %>
	  <li><%= link_to link.title, link.source  %></li>
	 <% end %>
	</ul>

	<h3>Future Reads:</h3>
	<ul>
  	<% @future.each do |future| %>
 			<li><%= link_to future.title, book_path(:id => future.olidb) %> by <%= future.author %></li>
  	<% end %>
	</ul>
	<h3>Recommended:</h3>
	
	<h3>Recent activity:</h3>
	<% @activities.each do |activity| %>
	<div class="activit">
		<%= link_to activity.owner.name, activity.owner if activity.owner %>
		<%= render_activity activity %>
	<% end %>
	</div>

	</div>
		
