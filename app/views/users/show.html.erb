          						<%= link_to past.title, book_path(:id => past.olidb) %>  <%= past.author %>
          						<div class="users-reading pull-right">
          							<img src="http://placehold.it/40x40" class="img-circle">
          							<img src="http://placehold.it/40x40" class="img-circle">
          							<img src="http://placehold.it/40x40" class="img-circle">
