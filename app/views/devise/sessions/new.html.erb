<div id="main">
	<div class="container" id="signin">
<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :defaults => { :input_html => { :class => "form-control" }}, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :placeholder => "Email" %>
    <%= f.input :password, :required => false, :placeholder => "Password" %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
	</div>
</div>
