<div id="main" class="profile-edit">
  <div class="container">
    <div class="row">
      <h3 id="profile-card-title">Edit Profile</h3>
        <div id="profile-card-edit">
          <%=(image_tag current_user.avatar.url) %><br>
          <%= link_to "Back", :back %>
        </div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:defaults => { :input_html => { :class => "form-control" } }, :html => { :method => :put, :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label>Edit Profile Picture</label>
    <%= f.input :avatar, as: :file %>
    <label>Your Name</label>
   	<%= f.input :name, :required => true, :placeholder => "Name" %>
    <label>Your Location</label>
    <%= f.input :location, :required => false, :placeholder => "Location" %>
    <label>Your Website</label>
    <%= f.input :url, :required => false, :placeholder => "Your Website" %>
    <label>Your Email</label>
     <%= f.input :email, :required => true, :autofocus => true, :placeholder => "Email" %>
	

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <label>New Password</label>
    <%= f.input :password, :autocomplete => "off", :required => false, :placeholder => "New Password" %>
    <label>Confirm New Password</label>
    <%= f.input :password_confirmation, :required => false, :placeholder => "Confirm New Password" %>

  </div>
  <div class="form-actions">
    <div class="well">
      <label>To update your profile, enter your current password</label>
    <%= f.input :current_password, :hint => "", :required => true, :placeholder => "Enter your current password to confirm your changes" %>
    </div>
    <div align="center">
    <%= f.button :submit, "Update" %>
    </div>
 </div>
   <%# redirect_to current_user %>
<% end %>
<div id="profile-cancel">
<hr>
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
    </div>
    </div>
  </div>
</div>