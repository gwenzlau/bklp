<% if user_signed_in? %>
<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<!-- activity feed -->
<div class="col-md-8 col-md-offset-1" id="activity-feed">
	<label>People reading with me</label>
	<ul>
		<% @book_current.each do |book| %>
			<% Book.find(book.book_id, :order => "created_at DESC").users.each do |user| %>
				<% if user.id == current_user.id %>
				<!-- Do nothing since this is you -->
				<% else %>
					<li><%= link_to user.name, user_path(user.id) %> joined you in reading <%= link_to Book.find(book.book_id).title, book_path(book.book_id) %>.</li>
				<% end %>
			<% end %>
		<% end %>
	</ul>
	
		
		<label>Recent Activity</label>

    <ul id="recent-activity">
        <%= render @activities %>
    </ul>
    
	<%= will_paginate @activities %>
</div>

			</div>
		</div>
	</div>
</div>
<% else %>
<%= render 'pages/walkthru' %>
<% end %>
