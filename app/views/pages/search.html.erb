<h2>Search result</h2>

<div class="bl-book-page">
	
	<% if @results.total_result == '0' %>
		Sorry, we could not find any books searching: "<%= params[:q] %>"
	<% else %>
		<ul>
			<% @results.results.work.each do |book| %>
					<li>
					  <%= link_to book.best_book.title, book_path("#{book.best_book.id}") %> by <%= book.best_book.author.name %>  with <%= link_to Book.all.where("#{book.best_book.id}").count, book_path("#{book.best_book.id}") %> other readers.
					</li>
			<% end %>
		</ul>
	<% end %>
	
</div>
