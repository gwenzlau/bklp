<%= simple_form_for(@link, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :source %>
  <%= f.input :title %>
	<%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <% end %>