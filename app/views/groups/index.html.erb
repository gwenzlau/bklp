<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<div class="col-md-9 col-md-offset-1" id="activity-feed">
					<%= link_to 'Create Group', new_group_path, class: 'btn btn-primary pull-right' %>
          <h2>Groups</h2>
  					<% if @groups.length > 0 %>
  						<ul>
  						<% @groups.each do |group| %>
  							<li>
  								<%= link_to group.title, group %>
  							</li>
  						<% end %>
  						</ul>
  					<% else %>
  						<p>
  							<em>There are no groups.</em>
  						</p>
  					<% end %>
    			</div>
			</div>
		</div>
	</div>
</div>
