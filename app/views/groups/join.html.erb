<div id="main">
  <div class="container">
    <div class="row">
      <div class="row">
        <%= render 'layouts/sidebar' %>
        <div class="col-md-9 col-md-offset-1" id="conversation">
          <label><%= @group.title %></label>

          <% if @status %>
            Cancel
          <% else %>
            <%= simple_form_for [@group, @membership] do |f| %>
              <%= f.submit 'Request to join', class: 'btn btn-primary' %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
