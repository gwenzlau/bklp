<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<div class="col-md-8 col-md-offset-1" id="activity-feed">
					<h2><%= @author.name %></h2>
						<p><%= raw(@author.description) %></p><br />
						<label>Author works (<%= @works.count %>)</label>

    				<div class="row" id="reads">
							
    					<% @works.each do |work| %>
    					<div class="col-md-2">
    						<%= link_to (image_tag ("http://images.amazon.com/images/P/#{work.isbn}.01.LZZZZZZ.jpg"), :title => "#{work.title}", data: { toggle: "tooltip"}), book_path(work.id) %>
    					</div>
    					<% end %>
    				</div>
						
						<p><%= link_to "Find and view more books by author on Goodreads.", authapi_path(:search => @author.name) %></p>
						
						<% if @works.blank? %>
							Could not find any works by this Author.
						<% end %>
    			</div>
			</div>
		</div>
	</div>
</div>

<script>
	$('#reads img').tooltip({
		placement: 'bottom'
	});
</script>
