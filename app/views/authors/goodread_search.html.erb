<div id="main">
	<div class="container">
		<div class="row">
			<div class="row">
				<%= render 'layouts/sidebar' %>
				<div class="col-md-9 col-md-offset-1" id="goodread-search">
					<label>Search results</label>
					<ul>
						<% @gr_result.results.work.each do |gr| %>
							<li>
								<%= link_to (image_tag ("#{gr.best_book.image_url}"), data: { toggle: "tooltip"}, :title => "#{gr.best_book.title}"), add_goodreads_book_path(:id => gr.best_book.id, :status => ""), method: :post %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$('#goodread-search ul li img').tooltip({
		placement: 'bottom'
	});
</script>