<!DOCTYPE html>
<html>
<head>
  <title>Bookloop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, name: "viewport", content: "width=device-width, initial-scale=1.0" %>
  <script>
    $(document).ready( function() {
      var BookloopEngine = {
          compile: function(template) {
              return {
                  render: function(context) {
                      return template.replace(/\{\{(\w+)\}\}/g, function (match,p1) { return context[p1]; });
                  }
              };
          }
      };

      $('#q').typeahead({
        name: 'books',
        valueKey: 'book',
        cache: true,
        remote: {
          url: '/search/autocomplete?utf8=âœ“&q=%QUERY',
        },
        template: '<span class="autocomplete"><a href="/books/{{book_id}}">{{book}}</a></span>',
        engine: BookloopEngine
      });

      $(document).on('click', '.tt-suggestion', function(){
        $('#search_form').submit();
      });
    });    
  </script>
</head>
<body>
 <%= render 'layouts/header' %>
<div class="container">
	        <div class="container" style="margin-top: 30px;">
            <% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
            <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>
</body>
</html>
