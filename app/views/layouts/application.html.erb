<!DOCTYPE html>
<html>
<head>
  <title>Bookloop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, name: "viewport", content: "width=device-width, initial-scale=1.0" %>
  <script>

    function updateBookStatus(user_id, book_id, status, title) {
      var d = {'book[user_id]': user_id, 'book[olidb]': book_id, 'book[status]': status, 'book[title]': title}
      $.post('/books', d, function(resp) {
        alert(resp);
      });
    }

    $(document).on('click', '.tt-suggestion button', function() {
      var title = $(this).attr('book-title');
      var status = $(this).attr('status');
      var book_id = $(this).attr('book');
      var user_id = '<%= current_user.id %>';
      updateBookStatus(user_id, book_id, status, title);
    }); 

    $(document).ready( function() {
      
      var BookloopEngine = {
          compile: function(template) {
              return {
                  render: function(context) {
                      return template.replace(/\{\{(\w+)\}\}/g, function (match,p1) { return context[p1]; });
                  }
              };
          }
      }; 

      $('#q').typeahead({
        name: 'books',
        valueKey: 'book',
        cache: true,
        remote: {
          url: '/search/autocomplete?utf8=âœ“&q=%QUERY',
        },
        template: '<span class="autocomplete"><a href="/books/{{book_id}}">{{book}}</a></span><br><div class="btn-group"><button book-title="{{book}}" book="{{book_id}}" status="1" type="button" class="btn btn-small">Already read it</button><button book-title="{{book}}" book="{{book_id}}" status="0" type="button" class="btn btn-small">Reading it</button><button type="button" class="btn btn-small" book-title="{{book}}" book="{{book_id}}" status="2">Going to read</button></div>',
        engine: BookloopEngine
      });

    }); 

  </script>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
	        <div class="container" style="margin-top: 30px;">
            <% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
            <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>
</body>
</html>
