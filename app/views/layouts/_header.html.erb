<!-- main nav -->
<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="https://s3.amazonaws.com/bklp/logo_biga.png" alt="Bookloop"></a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <%= form_tag("/search", method: "get", id: "search_form") do %>
                        <%= text_field_tag(:q) %>
                    <% end %>
                </div>
            </form>
            
            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                <li id="profile-name"><%= link_to current_user.name, current_user %></li>
                <li id="profile-img"><%= link_to (image_tag current_user.avatar.url), current_user %></li>
                <li id="signout"><%= link_to (image_tag ("https://s3.amazonaws.com/bklp/signout.png")), destroy_user_session_path, method: :delete %></li>
                <li id="signout"><%= button_to 'Logout', destroy_user_session_path, method: :delete %></li>

                <% else %>
                <li><%= link_to "Login", new_user_session_path %></li>
                <% end %>
            </ul>

        </div>
    </div>
</nav>