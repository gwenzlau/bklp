<!-- main nav -->
<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <img src="https://s3.amazonaws.com/bklp/nav-settings.png">
            </button>
            <a class="navbar-brand" href="/"><img src="https://s3.amazonaws.com/bklp/logo_biga.png" alt="Bookloop"></a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<%= form_tag books_path, :class => "navbar-form navbar-left", :method => 'get' do %>
						<%= text_field_tag :search, params[:search], :placeholder => "Find a book...", :accesskey => "S", :class => 'search' %>
                        <button class="btn btn-default" id="brapi-search">press enter to search</button>
					<% end %>
            
            <ul class="nav navbar-nav navbar-right">
