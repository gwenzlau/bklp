<div align="center">
	<%= image_tag((@theauthor.image_url), :class => "auth-pro") %><br />
	
<h2><%= @theauthor.name %></h2>
</div>
<p align="center"><%= @theauthor.born_at %> - <%= @theauthor.died_at %></p>

<p><%= raw(@theauthor.about) %></p>
<hr>
<i>Fans of <%= @theauthor.name %>:</i>
	


<hr>
<h4>Works by <%= @theauthor.name %>:</h4>
<ul class="unstyled">
<% @authorbooks.results.work.each do |book| %>
	<li class="span2"><%= link_to book.best_book.title, book_path("#{book.best_book.id}") %>
		<br>

	<%= (image_tag ("#{book.best_book.small_image_url}"), :class=>"book-cover-small")%>
	</li>
<% end %>
</ul>
</div>


